<%= form_with model: section do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Add a name to your section..." %>
    <% if section.errors[:name].any? %>
      <div class="error_message">
        <ul>
          <% section.errors[:name].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit "Create Section" %>
  </div>
<% end %>
